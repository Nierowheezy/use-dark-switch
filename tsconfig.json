{
  "compilerOptions": {
    "target": "es5",                            // Compiles to ES5 for compatibility
    "module": "esnext",                         // Use ESNext module system
    "lib": ["dom", "esnext"],                   // Include DOM and ESNext libraries
    "declaration": true,                        // Generate .d.ts files for type declarations
    "sourceMap": true,                          // Generate source maps for debugging
    "moduleResolution": "node",                 // Resolve modules like Node.js does
    "skipLibCheck": true,                       // Skip library checking for performance
    "strict": true,                             // Enable all strict type-checking options
    "noFallthroughCasesInSwitch": true,         // Prevent fallthrough in switch statements
    "noImplicitAny": true,                      // Ensure no variables have implicit `any`
    "strictFunctionTypes": true,                // Enforce strict function type checking
    "strictNullChecks": true,                   // Enforce strict null checks
    "strictPropertyInitialization": true,       // Enforce strict property initialization
    "jsx": "react",                             // Use React JSX syntax
    "esModuleInterop": true,                    // Enable interoperability between ES and CommonJS modules
    "allowSyntheticDefaultImports": true,       // Allow synthetic default imports
    "baseUrl": ".",                             // Base directory for non-relative module imports
    "resolveJsonModule": true                   // Resolve .json files as modules
  },
  "include": ["src/**/*"],                        // Include all files in the `src` folder
  "exclude": ["node_modules", "dist", "examples", "test", "**/*.test.ts"]  // Exclude test files and folders
}
