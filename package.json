{
  "name": "use-dark-switch",
  "version": "1.0.0",
  "description": "A powerful React Hook for implementing dark mode with enhanced features",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run lint && rollup -c",
    "test": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install && npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "coverage": "jest --coverage",
    "docs": "typedoc --out docs src",
    "clean": "rimraf dist"
  },
  "keywords": [
    "react",
    "hook",
    "dark-mode",
    "theme",
    "switch",
    "toggle",
    "color-scheme"
  ],
  "author": "Olabode Olaniyi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nierowheezy/use-dark-switch.git"
  },
  "bugs": {
    "url": "https://github.com/nierowheezy/use-dark-switch/issues"
  },
  "homepage": "https://github.com/nierowheezy/use-dark-switch#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^12.1.5",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^18.16.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^7.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^12.0.0",
    "prettier": "^2.0.0",
    "rimraf": "^5.0.0",
    "rollup": "^4.30.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.23.28",
    "typescript": "^4.5.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
